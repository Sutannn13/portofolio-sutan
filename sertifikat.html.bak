<body class="loading font-body text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
  <div id="spotlight"></div>

  <div id="custom-cursor">
    <div id="cursor-dot"></div>
    <div id="cursor-circle"></div>
  </div>

  <!-- animated background sama persis dengan index.html -->
