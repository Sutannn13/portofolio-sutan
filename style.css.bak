/* ================================================================================
| 9. MEDIA QUERIES (Responsiveness)                                            |
| Aturan CSS untuk menyesuaikan layout dan styling pada berbagai ukuran layar. |
| Menggunakan pendekatan Mobile-First, dimulai dari layar kecil ke besar.      |
| Breakpoints: 768px (Tablet), 1024px (Laptop Kecil), 1440px (Desktop).        |
================================================================================
*/


/* --- TAMBAHAN: Aksesibilitas untuk mengurangi animasi --- */

@media (prefers-reduced-motion: reduce) {
    html {
        scroll-behavior: auto;
    }

    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
        scroll-behavior: auto !important;
    }
}


/* Tablet ( >= 768px ) */

@media (max-width: 1023px) {
    .about-container {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .about-content h2::after {
        left: 50%;
        transform: translateX(-50%);
    }

    .about-image-wrapper {
        max-width: 400px;
        margin: 0 auto 2rem auto;
    }

    .contact-container {
        grid-template-columns: 1fr;
    }

    /* --- PENYESUAIAN: Tombol carousel agar tidak terlalu mepet --- */
    .carousel-nav.prev {
        left: -10px;
    }

    .carousel-nav.next {
        right: -10px;
    }

    .testimonial-slide {
        padding: 1.5rem;
        /* Kurangi padding di tablet */
    }
}


/* Mobile ( <= 767px ) */

@media (max-width: 767px) {
    html {
        font-size: 15px;
    }

    h1 {
        font-size: 2.5rem;
    }

    h2 {
        font-size: 2rem;
    }

    .container {
        padding-left: 1rem;
        padding-right: 1rem;
    }

    /* --- TAMBAHAN: Sembunyikan kursor kustom & spotlight di mobile --- */
    #custom-cursor,
    #spotlight {
        display: none;
    }

    body {
        cursor: auto;
    }

    a,
    button,
    .project-card,
    .indicator-dot,
    .carousel-nav,
    .modal-close,
    #scroll-to-top {
        cursor: pointer;
    }

    /* Mobile Navigation */
    .nav-menu {
        position: fixed;
        left: -100%;
        top: 0;
        flex-direction: column;
        background-color: var(--color-surface);
        width: 100%;
        height: 100vh;
        text-align: center;
        transition: 0.3s;
        gap: 2rem;
        padding-top: 8rem;
        z-index: 999;
    }

    .nav-menu.active {
        left: 0;
    }

    .nav-link {
        font-size: 1.5rem;
    }

    .hamburger {
        display: block;
        z-index: 1001;
        cursor: pointer;
    }

    .hamburger.active .bar:nth-child(2) {
        opacity: 0;
    }

    .hamburger.active .bar:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
    }

    .hamburger.active .bar:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
    }

    html.dark .hamburger.active .bar {
        background-color: var(--color-text);
    }

    /* Hero Section Mobile */
    .hero-section {
        text-align: center;
    }

    .hero-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .hero-text {
        order: 2;
    }

    .hero-image-wrapper {
        order: 1;
        margin-bottom: 2rem;
    }

    .hero-cta {
        justify-content: center;
    }

    /* ================== PENYESUAIAN TIMELINE DI MOBILE ================== */
    .timeline::before,
    .timeline-progress {
        left: 31px;
        transform: translateX(0);
    }

    .timeline-scroll-dot {
        left: 31px;
        transform: translate(-50%, -50%);
    }

    .timeline-item {
        width: 100%;
        padding-left: 70px;
        padding-right: 25px;
    }

    .timeline-item:nth-child(odd),
    .timeline-item:nth-child(even) {
        left: 0;
    }

    .timeline-dot {
        left: 23px;
    }

    .timeline-date {
        position: static;
        display: block;
        margin-bottom: 0.5rem;
        text-align: left !important;
    }

    /* ================== AKHIR PENYESUAIAN TIMELINE DI MOBILE ================== */
    /* Testimonial Carousel Mobile */
    .testimonial-carousel-wrapper {
        padding: 0;
    }

    .carousel-nav {
        width: 36px;
        height: 36px;
        top: calc(50% - 18px);
        /* Pusatkan tombol */
    }

    .carousel-nav.prev {
        left: 5px;
    }

    .carousel-nav.next {
        right: 5px;
    }

    .testimonial-slide {
        padding: 1rem;
    }

    .testimonial-slide blockquote {
        font-size: 1rem;
    }

    /* Contact Mobile */
    .contact-container {
        padding: 1.5rem;
    }

    /* Footer Mobile */
    .footer-container {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .social-icons {
        justify-content: center;
    }

    /* --- TAMBAHAN: Posisi tombol scroll to top di mobile --- */
    #scroll-to-top {
        bottom: 1.5rem;
        right: 1.5rem;
        width: 44px;
        height: 44px;
    }
}


